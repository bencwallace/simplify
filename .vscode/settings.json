{
    "flake8.args": [
        "--max-line-length",
        "120"
    ],
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.envFile": "${workspaceFolder}/.venv/pyvenv.cfg",
    "editor.formatOnSave": true,
    "black-formatter.args": [
        "--line-length",
        "120",
        "--target-version",
        "py310"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        ".venv": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "python.formatting.provider": "none"
}